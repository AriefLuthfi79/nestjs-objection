{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext"],
    "module": "es2015",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["lib/*"]
    },
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["node_modules"],
  "include": ["lib/**/*.ts", "tests/**/*.ts"]
}
